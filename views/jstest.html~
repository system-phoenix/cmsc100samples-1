			function guessNumber(){
				var x = prompt("enter a number: ");
				try{
					if(x == "") throw "empty";
					if(isNaN(x)) throw "not a number";
					x = Number(x);
					if(x < 5) throw "too low";
					if(x > 10) throw "too high";
				} catch(err){
					alert("input is " + err);
				}
				finally{
					alert("End of try-catch");
				}
				}
			}
		</script>
