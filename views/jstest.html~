			function guessNumber(){
				var guess = Math.floor((Math.random() * 100) + 1);
				var x;
				for(;;){
					x = prompt("Enter a number: ");
					try{
						if(x == "") throw "empty";
						if(isNaN(x)) throw "not a number";
						x = Number(x);
						if(x < guess) throw "lower. Should input higher";
						if(x > guess) throw "higher. Should input lower";
						if(x == guess) break;
					} catch(err){
						alert("input is " + err);
					}
				}
				alert("You found number " + guess + "!");
			}
		</script>
